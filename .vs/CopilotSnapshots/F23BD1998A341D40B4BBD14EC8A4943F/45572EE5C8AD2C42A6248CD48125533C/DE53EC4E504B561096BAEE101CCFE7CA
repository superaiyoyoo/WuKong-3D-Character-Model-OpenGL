    gluSphere(cuff, 1.0f, 16, 16);
    gluDeleteQuadric(cuff);
    glPopMatrix();

    // --- Enhanced Pull Tab ---
    GLfloat tabColor[] = { 0.5f, 0.3f, 0.2f, 1.0f };
